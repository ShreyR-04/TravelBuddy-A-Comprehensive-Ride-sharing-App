<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral_variant10">

    <ImageView
        android:id="@+id/DriverimageView"
        android:layout_width="336dp"
        android:layout_height="603dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57"
        app:srcCompat="@drawable/sign_up_box" />

    <TextView
        android:id="@+id/tdtextView"
        android:layout_width="215dp"
        android:layout_height="0dp"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="106dp"
        android:fontFamily="@font/aldrich"
        android:text="DRIVER INFO"
        android:textAlignment="center"
        android:textColor="#FCD722"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tdeditText1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tdtextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="ENTER YOUR DETAILS"
        android:textColor="#ffffbb33"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tdeditText1"
        app:layout_constraintStart_toStartOf="@+id/tdtextView"
        app:layout_constraintTop_toBottomOf="@+id/tdtextView"
        app:layout_constraintVertical_bias="0.164" />

    <EditText
        android:id="@+id/tdeditText1"
        android:layout_width="242dp"
        android:layout_height="0dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/edittext_round"
        android:drawableStart="@drawable/user_svgrepo_com"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="text"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/tdeditText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tdtextView"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/tdeditText2"
        android:layout_width="242dp"
        android:layout_height="0dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/edittext_round"
        android:drawableLeft="@drawable/phone_svgrepo_com"
        android:ems="10"
        android:hint="Enter phone number"
        android:inputType="phone"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/tdeditText3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tdeditText1"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/tdeditText3"
        android:layout_width="242dp"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/edittext_round"
        android:drawableLeft="@drawable/car_svgrepo_com"
        android:ems="10"
        android:hint="Enter Car Number"
        android:inputType="textCapCharacters"
        android:textAlignment="viewStart"

        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/tdeditText4"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tdeditText2"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/tdeditText4"
        android:layout_width="242dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittext_round"
        android:drawableLeft="@drawable/car_svgrepo_com"
        android:ems="10"
        android:hint="Enter Car Name"
        android:inputType="text"
        android:textAlignment="viewStart"

        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/tdeditText5"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tdeditText3"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/tdeditText5"
        android:layout_width="242dp"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/edittext_round"
        android:drawableLeft="@drawable/car_svgrepo_com"
        android:ems="10"
        android:hint="Enter Car Color"
        android:inputType="text"
        android:textAlignment="viewStart"

        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/tdSubmitBtn"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tdeditText4"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/tdSubmitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="115dp"
        android:backgroundTint="#FCD722"
        android:fontFamily="@font/aldrich"
        android:text="GO FOR VERIFICATION"
        android:textColor="@color/material_dynamic_neutral_variant10"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tdeditText5"
        app:layout_constraintTop_toBottomOf="@+id/tdeditText5" />


</androidx.constraintlayout.widget.ConstraintLayout>