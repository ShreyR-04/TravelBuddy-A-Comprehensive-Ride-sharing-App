<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral_variant10"
    android:backgroundTint="@color/material_dynamic_neutral_variant10"
    tools:ignore="ExtraText">


    <ImageView
        android:id="@+id/Aadhar1"
        android:layout_width="330dp"
        android:layout_height="315dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="40dp"
        android:background="@color/cardview_dark_background"
        android:backgroundTint="@color/cardview_dark_background"
        android:backgroundTintMode="src_atop"
        android:foregroundTint="@color/white"
        android:foregroundTintMode="screen"
        app:layout_constraintBottom_toTopOf="@+id/uploadbtn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/uploadbtn1"
        android:layout_width="266dp"
        android:layout_height="48dp"
        android:layout_marginBottom="244dp"
        android:backgroundTint="#FCD722"
        android:fontFamily="@font/aldrich"
        android:text="UPLOAD AADHAR"
        android:textColor="@color/material_dynamic_neutral0"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nextbtn1"
        android:layout_width="153dp"
        android:layout_height="48dp"
        android:layout_marginBottom="124dp"
        android:backgroundTint="#FCD722"
        android:fontFamily="@font/aldrich"
        android:text="NEXT"
        android:textColor="@color/material_dynamic_neutral0"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>